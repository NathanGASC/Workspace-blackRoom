{
  "name": "server_client_ts_setup",
  "version": "1.0.0",
  "description": "A setup to create a project with server & client in typescript.",
  "main": "index.js",
  "prisma": {
    "seed": "npm run seed"
  },
  "scripts": {
    "build:ops:before": "node ./ops/before.js",
    "build:typescript": "node ./ops/typescript.js",
    "build:browserify": "browserify ./dist/client/index.js -t [ partialify --alsoAllow html --alsoAllow css --alsoAllow txt --alsoAllow md ] -t imgurify -o ./dist/client/index.js",
    "build:ops:after": "node ./ops/after.js",
    "build:prisma:client": "npx prisma generate --schema=./src/server/prisma/schema.prisma",
    "build:prisma:migrate": "npx prisma migrate dev --name migration --schema=./src/server/prisma/schema.prisma",
    "build:prisma": "npm run build:prisma:client && npm run build:prisma:migrate",
    "build:uglify": "uglifyjs-folder ./dist/client/ -x .js -eo ./dist/client/",
    "build": "npm run build:ops:before && npm run build:typescript && npm run build:browserify && npm run build:ops:after",
    "build:watch": "concurrently -n code,prisma \"npm run build:watch:code\" \"npm run build:watch:prisma\"",
    "build:watch:code": "nodemon -e ts,html,css,png,jpeg,jpg,js,json,md,php --ignore ./dist/ --exec \"npm run build\"",
    "build:watch:prisma": "nodemon -e prisma --ignore ./dist/ --exec \"npm run build:prisma\"",
    "build:prod": "npm run build && npm run build:uglify",
    "start": "cd ./dist/server/ && php -S localhost:8000 ./index.php",
    "seed": "ts-node ./src/server/prisma/seed.ts",
    "seed:big": "ts-node ./src/server/prisma/seed.ts -- -l 100"
  },
  "author": "Nathan GASC",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "6.0.0",
    "@nathangasc/fox_logger": "2.0.6",
    "@nathangasc/fwc": "1.1.2",
    "@nathangasc/i18n": "^1.0.8",
    "@nathangasc/observer": "1.0.2",
    "@prisma/client": "3.11.0",
    "browserify": "17.0.0",
    "chance": "1.1.8",
    "concurrently": "7.0.0",
    "del": "6.0.0",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "imgurify": "2.0.1",
    "markdown-it": "12.3.2",
    "module-alias": "2.2.2",
    "node-fetch": "^2.6.7",
    "nodemon": "2.0.15",
    "npm": "8.5.5",
    "partialify": "3.1.6",
    "prisma": "3.11.0",
    "randexp": "0.5.3",
    "recursive-copy": "2.0.14",
    "ts-node": "10.7.0",
    "typescript": "4.6.2",
    "uglifyjs-folder": "3.0.0",
    "yargs": "17.4.0"
  },
  "devDependencies": {
    "@types/chance": "1.1.3",
    "@types/express": "4.17.13",
    "@types/markdown-it": "12.2.3",
    "@types/module-alias": "2.0.1",
    "@types/node": "17.0.21",
    "@types/node-fetch": "^2.6.1",
    "@types/yargs": "17.0.10"
  }
}
